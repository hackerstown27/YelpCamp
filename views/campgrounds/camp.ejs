<% include ../partials/header %>


<div class="container">
    <div class="row">
        <div class="col-3">
            <div class="container mt-2">
                <p class="lead">Yelp Camp</p>
                <ul class="list-group">
                    <li class="list-group-item active">Submited By  <kbd><%=camp.author.username%></kbd></li>
                    <% if (camp.author.id.equals(currentUser._id)) {%>
                    <li class="list-group-item"><a href="/campsites/<%=camp._id%>/edit" class="btn btn-warning btn-block">Edit</a></li>
                    <li class="list-group-item">
                        <form action="/campsites/<%=camp._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-block">Delete</button>
                        </form>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="col-9">
            <div class="jumbotron">
                <div class="container">
                    <img src="<%= camp.image %>"  class="img-fluid" alt="...">
                    <h4 class="text-right mt-2">$9.66/Night</h4>
                    <h1 class="display-4 text-primary"> <%= camp.name %></h1>
                    <p class="lead">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Amet excepturi sint maiores numquam! 
                        Suscipit voluptates quidem nemo minima quisquam, aliquam voluptatem cumque tempora, ullam 
                        distinctio et ducimus nostrum quod pariatur. Lorem ipsum, dolor sit amet consectetur adipisicing 
                        elit. Voluptas nobis, mollitia magnam nemo sapiente magni blanditiis illum at harum eaque aliquam 
                        suscipit ipsa animi? Illum iste fugit id eius cum?</p>
                </div>
            </div>
                    
            <div class="container">
                <div class="text-right">
                    <a class="btn btn-primary" href="/campsites/<%=camp._id%>/comments/new"> Add New Comment </a>
                    <div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
                </div>
                <ul class="list-unstyled">
                    <% camp.comment.forEach(function(comment){ %>
                        <li class="media">
                            <img src="..." class="mr-3" alt="...">
                            <div class="media-body">
                                <hr>
                                <div class="row justify-content-around">
                                    <div class="col-6">
                                        <h5 class="mt-0 mb-1"><%= comment.author.username %></h5>
                                        <p class="lead"><%= comment.data %></p>
                                    </div>
                                    
                                    <div class="col-3 text-right">
                                        <% if (comment.author.id.equals(currentUser._id)) {%>
                                            <a href="/campsites/<%=camp._id%>/comments/<%=comment._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
                                            <form action="/campsites/<%=camp._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" style="display: inline;">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div> 
                            </div>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>
</div>





<% include ../partials/footer %>
